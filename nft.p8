version 42
__lua__
offsetx=32
offsety=32
mapw=8
maph=8

function _init()
 y=6
 x=1
end

function _update()
 if btnp(⬅️) then x=(x-1)%mapw end
 if btnp(➡️) then x=(x+1)%mapw end
 if btnp(⬆️) then y=(y-1)%maph end
 if btnp(⬇️) then y=(y+1)%maph end
end

function drawcurse()
 spr(4, offsetx+x*8, offsety+y*8)
end

function _draw()
 cls()
 map(0, 0, offsetx, offsety, mapw, maph)
 drawcurse()
end
